<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/display1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#000"
        android:gravity="right|center_vertical"
        android:maxEms="12"
        android:text="0"
        android:textColor="#fff"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/display2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#000"
        android:gravity="right|center_vertical"
        android:text=""
        android:textColor="#fff"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/left_brackets"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="(" />

            <Button
                android:id="@+id/right_brackets"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text=")" />

            <Button
                android:id="@+id/mc_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="mc" />

            <Button
                android:id="@+id/m+_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="m+" />

            <Button
                android:id="@+id/m-_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="m-" />

            <Button
                android:id="@+id/mr_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="mr" />

            <Button
                android:id="@id/AC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="AC" />

            <Button
                android:id="@id/plus_minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="±" />

            <Button
                android:id="@id/per_cent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="%" />

            <Button
                android:id="@id/except"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/opbtn"
                android:text="÷" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button android:id="Sec_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="Sec"/>
            <Button 
                android:id="x^2_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="x^2"/>
            <Button
                android:id="x^3_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="x^3" />
            <Button  android:id="x^y_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="x^y" />
            <Button  android:id="e^y_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="e^x" />
            <Button  android:id="ten^y_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/acbtn"
                android:text="10^x" />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>